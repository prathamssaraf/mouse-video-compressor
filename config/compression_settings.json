  "roi_compression": {
    "enabled": true,
    "roi_quality_boost": 3,
    "background_quality_reduction": 5,
    "roi_padding": 50,
    "min_roi_area": 100
  },
  "validation_rules": {
    "crf_range": [0, 51],
    "fps_range": [1, 60],
    "valid_presets": ["ultrafast", "superfast", "veryfast", "faster", "fast", "medium", "slow", "slower", "veryslow"],
    "valid_profiles": ["baseline", "main", "high"],
    "max_bitrate_factor": 2.0,
    "min_bitrate_factor": 0.1
  },
  "output_formats": {
    "mp4": {
      "codec": "libx264",
      "container": "mp4",
      "audio_codec": "aac",
      "pixel_format": "yuv420p"
    },
    "avi": {
      "codec": "libx264",
      "container": "avi", 
      "audio_codec": "mp3",
      "pixel_format": "yuv420p"
    },
    "mov": {
      "codec": "libx264",
      "container": "mov",
      "audio_codec": "aac",
      "pixel_format": "yuv420p"
    }
  },
  "performance_settings": {
    "max_concurrent_jobs": 2,
    "thread_count": 0,
    "memory_limit_gb": 4,
    "temp_directory": "./temp",
    "cleanup_temp_files": true,
    "temp_file_retention_hours": 24
  }
